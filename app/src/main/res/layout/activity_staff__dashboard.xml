<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Staff_Dashboard">

    <Button
        android:textStyle="bold"

        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Approve Voter"
        android:layout_marginTop="100dp"
        android:layout_marginStart="25dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/av"
        android:layout_marginLeft="50dp" />

    <Button
        android:textStyle="bold"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_below="@+id/av"
        android:text="Approve Candidate"

        android:layout_marginStart="25dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/ac"
        android:layout_marginLeft="50dp" />
    <Button
        android:textStyle="bold"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Manage Voting"

        android:layout_below="@+id/ac"
        android:layout_marginStart="25dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/vote"
        android:layout_marginLeft="50dp" />
    <Button
        android:textStyle="bold"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Manage Result"

        android:layout_below="@+id/vote"
        android:layout_marginStart="25dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/result"
        android:layout_marginLeft="50dp" />

</RelativeLayout>